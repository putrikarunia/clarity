<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    
    <ImageView
        android:id="@+id/folder_small"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:src="@drawable/folder_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/folder_small"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_container_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/defaultText"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/folder_container_list_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 items"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/defaultTextTransparent"
            android:textSize="12dp"/>
    </LinearLayout>

</RelativeLayout>